<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hp.bishe.dao.DormWeiXiuDao">

    <!--总数-->
    <select id="findConnt" parameterType="com.hp.bishe.vo.WeiXiuVo" resultType="Integer">
        select count(1) from weixiu
        <where>
            <if test="start!=null">
                and create_time between #{start} and #{stop}
            </if>
        </where>
    </select>

    <!--结果集-->
    <select id="findByData" parameterType="com.hp.bishe.vo.WeiXiuVo" resultType="com.hp.bishe.bean.WeiXiu">
        select * from weixiu
        <where>
            <if test="start!=null">
                and create_time between #{start} and #{stop}
            </if>
        </where>
        order by create_time
        limit #{startRow},#{size}
    </select>

    <!--报修-->
    <update id="updateWeixiu" parameterType="com.hp.bishe.bean.WeiXiu">
        update weixiu set cost=#{cost} where sn=#{sn} and create_time=#{create_time}
    </update>
</mapper>